{
  "compilerOptions": {
    "checkJs": true,
    "downlevelIteration": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "incremental": true,
    "jsx": "preserve",
    "lib": [
      "dom.iterable",
      "dom",
      "es6"
    ],
    "module": "esnext",
    "moduleResolution": "node",
    "noEmit": true,
    "noImplicitAny": true,
    "paths": {},
    "typeRoots": [
      "node_modules/@types",
      "src/@types"
    ],
  },
  "include": [
    "src/**/*"
  ],
}
