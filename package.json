{
  "name": "electron-react-parcel",
  "version": "1.0.0",
  "description": "Electron app build using ReactJS and Parcel web application bundler",
  "main": "src/electron.js",
  "targets": {
    "default": {
      "distDir": "build",
      "publicUrl": "./",
      "source": "src/index.html"
    }
  },
  "scripts": {
    "start:parcel": "parcel -p 3000",
    "build:parcel": "parcel build",
    "start:electron": "while true; do wait-on http://localhost:3000 && electron .; done",
    "build:electron": "electron-builder",
    "clean": "rm -rf -- build .cache .parcel-cache dist",
    "build": "yarn clean && yarn build:parcel && yarn build:electron",
    "build:all": "yarn build --mac --win --linux",
    "start": "concurrently 'cross-env BROWSER=none yarn start:parcel' 'yarn start:electron'",
    "test:bundle": "bundlesize"
  },
  "bundlesize": [
    {
      "path": "./build/src.*.js",
      "maxSize": "250 kB"
    },
    {
      "path": "./build/src.*.css",
      "maxSize": "100 kB"
    }
  ],
  "keywords": [
    "boskysoft",
    "electron",
    "react",
    "parcel",
    "electron-react-parcel",
    "electron react parcel"
  ],
  "author": "Yogesh Kumar <yogesh@boskysoft.com>",
  "license": "MIT",
  "dependencies": {
    "@emotion/react": "^11.7.1",
    "@emotion/styled": "^11.6.0",
    "electron-download": "^4.1.1",
    "electron-is-dev": "^2.0.0",
    "esm": "^3.2.25",
    "file-icon": "4",
    "react": "^17.0.2",
    "react-dom": "^17.0.2"
  },
  "build": {
    "productName": "Fake Quicksilver",
    "appId": "com.interestinglythere.electron-1c2bc6ff082dda165c6960c8",
    "files": [
      "src/{electron,main,preload}.js",
      "src/assets/*",
      "build/**/*"
    ],
    "mac": {
      "target": "dmg"
    },
    "win": {
      "target": "nsis"
    },
    "linux": {
      "target": "deb",
      "category": "Development"
    }
  },
  "homepage": "./",
  "devDependencies": {
    "@emotion/css": "^11.7.1",
    "@types/react": "^17.0.38",
    "@types/react-dom": "^17.0.11",
    "bundlesize": "^0.18.0",
    "concurrently": "^5.0.2",
    "cross-env": "5.2.0",
    "electron": "16.0.6",
    "electron-builder": "22.14.5",
    "electron-reload": "^2.0.0-alpha.1",
    "kind-of": "^6.0.3",
    "parcel": "^2.0.1",
    "prettier": "^2.5.1",
    "prettier-plugin-organize-imports": "^2.3.4",
    "typescript": "^4.5.4",
    "wait-on": "3.2.0"
  }
}
